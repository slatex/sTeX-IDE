{
  "name": "stexide",
  "displayName": "sTeXIDE",
  "description": "An IDE for sTeX: An Infrastructure for Semantic Preloading of LaTeX Documents",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:stexide.info",
    "onLanguage:tex",
    "onLanguage:latex"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stexide.info",
        "title": "sTeX Info",
        "category": "sTeX"
      },
      {
        "command": "stexide.viewer",
        "title": "View Semantic HTML",
        "category": "sTeX",
        "icon": "img/stex.svg"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stexide-viewcontainer",
          "title": "sTeX",
          "icon": "img/stex.svg"
        }
      ]
    },
    "views": {
      "stexide-viewcontainer": [
        {
          "id": "stexide-view",
          "name": "Blubb",
          "icon": "img/stex.svg",
          "contextualTitle": "sTeX functionality",
          "when": "latex-workshop:enabled"
        }
      ]
    },
    "configuration": [
      {
        "title": "sTeX",
        "properties": {
          "stexide.jarpath": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to your [MMT.jar](https://github.com/UniFormal/MMT/releases)"
          },
          "stexide.mathhub": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to your MathHub folder"
          },
          "stexide.mmtport": {
            "type": "string",
            "default": "8090",
            "markdownDescription": "The port that MMT should serve xhtml documents at"
          },
          "stexide.serverProperties": {
            "type": "string",
            "default": "",
            "markdownDescription": "Dunno yet"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/shell-quote": "^1.7.1",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "locate-java-home": "^1.1.2",
    "shell-quote": "^1.7.3",
    "vscode-languageclient": "^7.0.0"
  }
}
