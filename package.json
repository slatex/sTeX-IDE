{
	"name": "stexide",
	"displayName": "sTeX",
	"description": "",
	"icon": "img/stex.png",
	"repository": {
		"type": "git",
		"url": "github:slatex/stex-IDE"
	},
	"publisher": "kwarc",
	"version": "1.1.0",
	"license": "GPL3",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Programming Languages",
		"Language Packs"
	],
	"bugs": {
		"url": "https://github.com/slatex/sTeX-IDE/issues"
	},
	"activationEvents": [
		"workspaceContains:**/*.tex"
	],
	"main": "./dist/extension.js",
	"editor.semanticHighlighting.enabled": true,
	"contributes": {
		"semanticTokenTypes": [
			{
				"id": "stex-module",
				"superType": "namespace",
				"description": "An sTeX Module"
			},
			{
				"id": "stex-symdecl",
				"superType": "keyword",
				"description": "An sTeX symbol or notation declaration"
			},
			{
				"id": "stex-constant",
				"superType": "string",
				"description": "An sTeX Symbol"
			},
			{
				"id": "stex-variable",
				"superType": "variable",
				"description": "An sTeX Variable"
			},
			{
				"id": "stex-file",
				"superType": "file",
				"description": "An sTeX File reference"
			}
		],
		"semanticTokenModifiers": [
			{
				"id": "stex-deprecatedmodule",
				"description": "This module is deprecated"
			}
		],
		"configurationDefaults": {
				"editor.semanticTokenColorCustomizations": {
						"rules": {
							"stex-module":{
								"fontStyle": "italic bold underline"
							},
							"stex-constant":{
								"fontStyle": "underline"
							},
							"stex-symdecl":{
								"fontStyle": "italic bold underline"
							},
							"stex-variable":{
								"foreground":"#858282",
								"fontStyle": "italic underline"
							},
							"stex-file":{
								"fontStyle": "italic underline"
							}
						}
				}
		},
		"commands": [
			{
				"command": "stexide.build",
				"title": "Build PDF/XHTML/OMDoc",
				"icon": "$(testing-run-all-icon)"
			},
			{
				"command": "stexide.buildhtml",
				"title": "Preview HTML",
				"icon": "$(testing-run-icon)"
			},
			{
				"command": "stexide.dump",
				"title": "Export Standalone HTML",
				"icon": "$(desktop-download)"
			},
			{
				"command": "stexide.info",
				"title": "sTeX Info",
				"category": "sTeX"
			},
			{
				"command": "stexide.mathhub.install",
				"title": "Install",
				"icon": {
					"light": "img/cloud-download-light.svg",
					"dark": "img/cloud-download-dark.svg"
				}
			},
			{
				"command": "stexide.openSettings",
				"title": "Extension Settings",
				"category": "sTeX",
				"icon": "$(settings-gear)"
			},
			{
				"command": "stexide.openInBrowser",
				"title": "Open Preview in Browser",
				"category": "sTeX",
				"icon": "$(link-external)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "stexide-viewcontainer",
					"title": "sTeX Tools",
					"icon": "img/stex.svg"
				}
			]
		},
		"views": {
			"stexide-viewcontainer": [
				{
					"id": "stexidemathhub",
					"name": "Math Archives",
					"icon": "img/stex.svg",
					"contextualTitle": "Math Archives",
					"when": "latex-workshop:enabled"
				},
				{
					"id": "stexidesearch",
					"type": "webview",
					"name": "sTeX Search",
					"icon": "img/stex.svg",
					"contextualTitle": "sTeX Search",
					"when": "latex-workshop:enabled"
				},
				{
					"id": "stexidetools",
					"type": "webview",
					"name": "sTeX Tools",
					"icon": "img/stex.svg",
					"contextualTitle": "sTeX Functionality",
					"when": "latex-workshop:enabled"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "stexide.mathhub.install",
					"group": "inline",
					"when": "view == stexidemathhub && viewItem == remote"
				}
			],
			"editor/title": [
				{
					"command": "stexide.build",
					"group": "navigation",
					"when": "editorLangId =~ /^tex$|^latex$|^latex-expl3$/"
				},
				{
					"command": "stexide.buildhtml",
					"group": "navigation",
					"when": "editorLangId =~ /^tex$|^latex$|^latex-expl3$/"
				},
				{
					"command": "stexide.openInBrowser",
					"group": "navigation",
					"when": "editorLangId =~ /^tex$|^latex$|^latex-expl3$/"
				},
				{
					"command": "stexide.dump",
					"group": "navigation",
					"when": "editorLangId =~ /^tex$|^latex$|^latex-expl3$/"
				}
			]
		},
		"configuration": [
			{
				"title": "sTeX",
				"properties": {
					"stexide.mmt.jarPath": {
						"type": "string",
						"default": "",
						"markdownDescription": "Path to your [MMT.jar](https://github.com/UniFormal/MMT/releases)"
					},
					"stexide.mmt.javaHome": {
						"type": "string",
						"default": "",
						"markdownDescription": "Path to specific Java installation (_optional, leave blank for default_)"
					},
					"stexide.mmt.port": {
						"type": "integer",
						"default": "8090",
						"markdownDescription": "The port at which MMT serves xhtml documents"
					},
					"stexide.remoteMathHub": {
						"type": "string",
						"default": "https://stexmmt.mathhub.info/:sTeX",
						"markdownDescription": "The URL of the remote MathHub server for repository management"
					},
					"stexide.preview": {
						"type": "string",
						"default": "on save",
						"markdownDescription": "When to parse the sTeX document and show the HTML preview window",
						"enum": [
							"on save",
							"on edit",
							"manually"
						],
						"enumDescriptions": [
							"Everytime a .tex file is saved (whether changed or not)",
							"Everytime a .tex file is edited (dangerous!)",
							"Only manually"
						]
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/shell-quote": "^1.7.1",
		"@types/vscode": "^1.67.0",
		"@types/webpack-env": "^1.16.4",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"@vscode/test-web": "^0.0.24",
		"assert": "^2.0.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"process": "^0.11.10",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"@redhat-developer/vscode-wizard": "^0.3.1",
		"@vscode/codicons": "^0.0.30",
		"@vscode/webview-ui-toolkit": "^1.0.0",
		"locate-java-home": "^1.1.2",
		"shell-quote": "^1.7.3",
		"vscode-languageclient": "^8.0.1",
		"websocket-stream": "^5.5.2"
	},
	"extensionDependencies": [
		"james-yu.latex-workshop"
	]
}