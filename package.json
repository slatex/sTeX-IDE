{
	"name": "stexide",
	"displayName": "sTeX",
	"description": "",
	"repository": {
		"type":"git",
		"url":"github:slatex/stex-IDE"
	},
	"publisher": "KWARC",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:stexide.info",
		"onLanguage:tex",
		"onLanguage:latex"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "stexide.info",
				"title": "sTeX Info",
				"category": "sTeX"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "stexide-viewcontainer",
					"title": "sTeX Tools",
					"icon": "img/stex.png"
				}
			]
		},
		"views": {
			"stexide-viewcontainer": [
				{
					"id": "stexide-view",
					"name": "sTeX Tools",
					"icon": "img/stex.png",
					"contextualTitle": "sTeX Functionality",
					"when": "latex-workshop:enabled"
				}
			]
		},
		"configuration": [
			{
				"title": "sTeX",
				"properties": {
					"stexide.jarpath": {
						"type": "string",
						"default": "",
						"markdownDescription": "Path to your [MMT.jar](https://github.com/UniFormal/MMT/releases)"
					},
					"stexide.mmtport": {
						"type": "string",
						"default": "8090",
						"markdownDescription": "The port at which MMT serves xhtml documents"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/shell-quote": "^1.7.1",
		"@types/vscode": "^1.67.0",
		"@types/webpack-env": "^1.16.4",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"@vscode/test-web": "^0.0.24",
		"assert": "^2.0.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"process": "^0.11.10",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"locate-java-home": "^1.1.2",
		"shell-quote": "^1.7.3",
		"vscode-languageclient": "^8.0.1",
		"vscode-wizard": "^0.2.20",
		"websocket-stream": "^5.5.2"
	},
	"extensionDependencies": ["james-yu.latex-workshop"]
}